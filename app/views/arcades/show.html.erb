
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

<div class='row'>
  <div class='col-md-offset-2 col-sm-8'>
    <div class="panel panel-info">
      <div class="panel-body">

    <%= image_tag "pacman.jpg", class:'game-image' %>

    <div id='text-wrapper'>
      <br>

    <p>
      <strong>Title:</strong>
      <%= @arcade.title %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @arcade.address %>
    </p>
    <p>
      <strong>Phone number:</strong>
      <%= @arcade.phone_number %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= @arcade.website %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @arcade.status %>
    </p>

    <p>
      <% if @arcade.image.present? %>
      <strong>Image:</strong>

      <%= image_tag "http://" + @arcades.image.url(:icon) %>
  <% end %>
    </p>

  </div>
      </div>
    </div>
    <div id="multi_markers" style='color:#23649d; width: 100%; height: 300px;'>

    </div>


    <%= link_to 'Edit', edit_arcade_path(@arcade) %> |
    <%= link_to 'Back', arcades_path %>


  </div>
</div>


<script>
function initMap() {
       var handler = Gmaps.build('Google');
       handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
         var markers = handler.addMarkers(
           <%=raw @hash.to_json %>
         );
         handler.bounds.extendWith(markers);
         handler.fitMapToBounds();
       });
     }

   </script>
   <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq6CCq-NkrMmt793FCG-e8otBGj1vC7H0&callback=initMap">
      </script>

<img class="image-resp" src="images/arcade-machines.png" alt="arcade machines" />
