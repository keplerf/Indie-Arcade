
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

<div class='row'>
  <div class='col-md-offset-2 col-sm-8'>
    <div class="panel panel-info">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
              <%= image_tag "pacman.jpg", class:'game-image' %>
          </div>

          <div class="col-md-5">
            <h3><%= @arcade.title %></h3>




    <div id='text-wrapper'>
      <br>




    <p>
      <strong>Address:</strong>
      <%= @arcade.address %>
    </p>
    <p>
      <strong>Phone number:</strong>
      <%= @arcade.phone_number %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= @arcade.website %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @arcade.status %>
    </p>

    <p>
      <% if @arcade.image.present? %>
      <strong>Image:</strong>

      <%= image_tag "http://" + @arcades.image.url(:icon) %>
      <% end %>
    </p>

  </div>

</div>

</div>



      </div>
    </div>
    <div class="row ">
      <div class="col-md-12">
        <div class="map">
            <div id="multi_markers" style='color:#23649d; width: 100%; height: 300px;'></div>

        </div>
    </div>
  </div>


<div class="row ">
  <div class="col-md-12">
    <h3></h3>
    <%= link_to 'Edit', edit_arcade_path(@arcade), class: "btn btn-primary" %>
    <%= link_to 'Back', arcades_path , class: "btn btn-default"%>
  </div>

</div>

  </div>
</div>



<script>
function initMap() {
       var handler = Gmaps.build('Google');
       handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
         var markers = handler.addMarkers(
           <%=raw @hash.to_json %>
         );
         handler.bounds.extendWith(markers);
         handler.fitMapToBounds();
       });
     }

   </script>
   <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq6CCq-NkrMmt793FCG-e8otBGj1vC7H0&callback=initMap">
      </script>
