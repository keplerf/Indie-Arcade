
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

<div class='row'>
  <div class='col-sm-offset-2 col-sm-4'>
    <h1><%=@arcade.title%></h1>
  </div>
</div>

<div class='page-divider'></div>

<div class='row'>
  <div class='col-md-offset-2 col-sm-8'>
    <div class="panel panel-info">
      <div class="panel-body">

        <div class='row'>
          <div class='col-xs-3 col-sm-3'>
            <%= image_tag "http://"+@arcade.image.url(:icon), class:'game-image'%>
          </div>
          <div class='col-xs-offset-3 col-sm-offset-3 col-xs-3 col-sm-3'>
            <p>
              <strong>Status:</strong>
              <%= @arcade.status %>
            </p>
          </div>

          <div class='col-xs-offset-3 col-sm-offset-3 col-xs-3 col-sm-3'>
            <p>
              <strong>Address:</strong>
              <%= @arcade.address %>
            </p>
          </div>

          <div class='col-xs-offset-3 col-sm-offset-3 col-xs-3 col-sm-3'>
            <p>
              <strong>Phone number:</strong>
              <%= @arcade.phone_number %>
            </p>
          </div>

          <div class='col-xs-offset-3 col-sm-offset-3 col-xs-3 col-sm-3'>
            <p>
              <strong>Website:</strong>
              <%= @arcade.website %>
            </p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div class='page-divider'></div>
<div class='row'>
  <div class='col-xs-offset-2 col-sm-offset-2 col-xs-8 col-sm-8'>
    <div id="multi_markers" style='color:#23649d; width: 100%; height: 300px;'>
  </div>
</div>

<div class='row'>
  <div class='col-xs'
</div>
    <%= link_to 'Edit', edit_arcade_path(@arcade) %> |
    <%= link_to 'Back', arcades_path %>


  </div>
</div>



<script>
function initMap() {
   var handler = Gmaps.build('Google');
   handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
     var markers = handler.addMarkers(
       <%=raw @hash.to_json %>
     );
     handler.bounds.extendWith(markers);
     handler.fitMapToBounds();
   });
 }
</script>
<script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq6CCq-NkrMmt793FCG-e8otBGj1vC7H0&callback=initMap">
</script>
