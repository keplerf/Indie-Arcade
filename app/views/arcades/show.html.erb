<div id="multi_markers" style='color:#23649d; width: 50%; height: 300px;'>

</div>
<script>
function initMap() {
       var handler = Gmaps.build('Google');
       handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
         var markers = handler.addMarkers(
           <%=raw @hash.to_json %>
         );
         handler.bounds.extendWith(markers);
         handler.fitMapToBounds();
       });
     }

   </script>
   <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq6CCq-NkrMmt793FCG-e8otBGj1vC7H0&callback=initMap">
      </script>
