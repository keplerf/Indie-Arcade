<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @game.user %>
</p>

<p>
  <strong>Last in arcade:</strong>
  <%= @game.last_in_arcade %>
</p>

<p>
  <strong>Times played:</strong>
  <%= @game.times_played %>
</p>

<p>
  <strong>Status:</strong>
  <%= @game.status %>
</p>

<p>
  <strong>Purchase url:</strong>
  <%= @game.purchase_url %>
</p>

<p>
  <strong>Game description:</strong>
  <%= @game.game_description %>
</p>

<p>
  <strong>Categories:</strong>
  <%= @game.categories %>
</p>

<p>
  <strong>Key map:</strong>
  <%= @game.key_map %>
</p>

<p>
  <strong>Image:</strong>
  <%= @game.image %>
</p>

<%= link_to 'Edit', edit_game_path(@game) %>
|
<%= link_to 'Back', games_path %>

<hr>

<%= form_for [@game, @review], remote: true do |f| %>
<div>
  <div><%= f.text_field :fun %></div>
  <div><%= f.text_field :playability %></div>
  <div><%= f.text_field :difficulty %></div>
</div>
<%= f.submit %>
<% end %>

<% @game.reviews.each do |ans| %>

<div>
  <div><%= ans.fun %></div>
  <div class="progress">
    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuemin="0" aria-valuemax="100" style=""%></div>
  </div>
  <div><%= ans.playability %></div>
  <div class="progress">
    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: 20%"></div>
  </div>
  <div><%= ans.difficulty %></div>
  <div class="progress">
    <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: 60%"></div>
  </div>
</div>

<% end %>
