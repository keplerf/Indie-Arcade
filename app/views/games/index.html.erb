<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Last in arcade</th>
      <th>Times played</th>
      <th>Status</th>
      <th>Purchase url</th>
      <th>Game description</th>
      <th>Categories</th>
      <th>Key map</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.user %></td>
        <td><%= game.last_in_arcade %></td>
        <td><%= game.times_played %></td>
        <td><%= game.status %></td>
        <td><%= game.purchase_url %></td>
        <td><%= game.game_description %></td>
        <td><%= game.categories %></td>
        <td><%= game.key_map %></td>
        <td><%= game.image %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

