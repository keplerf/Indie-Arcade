<div class="row">
  <div class="header">
    <div class="col-md-6 text-center" >
      <img src="images/arcade-machines.png" alt="arcade machines" />
    </div>
    <div class="col-md-6">
      <div class="row">
          <div class="col-md-6">
              <h1 class="text-center"> Got game? </h1>
          </div>

          <div class="col-md-6">
              </br></br>
             <%= link_to "submit your game", new_user_path, class: "btn btn-default" %>

          </div>

          <div class="col-md-12">
            <div class="search-container">
              <form role="search">
                <div class="form-group col-md-10" >
                  <input type="text" class="form-control " placeholder="Game Search ">
                </div>
                <button type="submit" class="btn btn-default col-md-2">Search </button>
              </form>
            </div>

          </div>
      </div>
    </div>
  </div>

  <div class="jumbotron">
    <h3>Be a part of the Indie Arcade Game scene in Vancouver. </h3>
    <h4> </h4>


  </div>

</div>
