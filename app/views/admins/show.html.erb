
<div class='row'>
  <div class='col-xs-offset-1 col-sm-offset-1 col-xs-4 col-sm-4'>
    <h3>Games Awaiting Approval</h3>
  </div>
  <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
    <h3>Users Awaiting Approval</h3>
  </div>
</div>
<div class='row'>
  <div class='col-xs-6 col-sm-6'>
    <table class='table table-hover table-condensed'>
      <tr>
        <th>Game Name</th>
        <th>Game Company</th>
        <th>Approve</th>
        <th>Reject</th>
      </tr>
      <%@games.each do |g| %>
      <tr>
        <td><%=g.title%></td>
        <td><%=g.user.company_name%></td>
        <td><%= link_to "Approve", status_approved_path(g), :method => :patch, class:'btn btn-default btn-xs' %></td>
        <td><%= link_to "Reject", status_rejected_path(g), :method => :patch, class:'btn btn-default btn-xs' %></td>
      </tr>
      <%end%>
    </table>
  </div>
  <div class='col-xs-6 col-sm-6'>
    <table class='table table-hover table-condensed'>
      <tr>
        <th>Company Name</th>
        <th>Website</th>
        <th>Approve</th>
        <th>Reject</th>
        <th>Details</th>
      </tr>
      <%@users.each do |x| %>
      <tr>
        <td><%=x.company_name%></td>
        <td><%=x.website%></td>
        <td><%= link_to 'Details', user_path(x), class: "btn btn-default small btn-xs" %></td>
        <td><%= link_to "Approve", user_approved_path(x), :method => :patch, class: "btn btn-default small btn-xs" %></td>
        <td><%= link_to "Reject", user_rejected_path(x), :method => :delete, class: "btn btn-default small btn-xs" %></td>
      </tr>
      <%end%>
    </table>
  </div>
</div>

<div class='row'>
  <div class='col-xs-6 col-sm-6'>
    <center><%=paginate @games, param_name: 'pg_admin_games'%></center>
  </div>
  <div class='col-xs-6 col-sm-6'>
    <center><%=paginate @users, param_name: 'pg_admin_users'%></center>
  </div>
</div>


    <h3>Status of Arcades</h3>

    <ul class="list-group">
      <%= link_to "Arcade List", arcades_path, method: 'get', class:'btn btn-default' %>
    <% @arcades.each do |a| %>
      <li class="list-group-item">
        <%= a.title %>
         <span class="badge"><%= a.status %> </span>
      </li>

    <% end %>

    </ul>
  </div>
</div>
